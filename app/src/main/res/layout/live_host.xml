<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:clipChildren="false">

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_main"
        android:layout_width="fill_parent"
        android:layout_height="0.0dip"
        android:layout_weight="1.0" />

    <LinearLayout
        android:gravity="center"
        android:orientation="horizontal"
        android:background="#fff8f8f8"
        android:clipChildren="false"
        android:layout_width="fill_parent"
        android:layout_height="54.0dip">

        <RadioGroup
            android:gravity="center"
            android:orientation="horizontal"
            android:id="@+id/rg_main"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <RadioButton android:gravity="center"
                android:id="@+id/rb_live_main"
                android:paddingLeft="0.0dip"
                android:layout_width="0.0dip"
                android:layout_height="46.0dip"
                android:checked="true"
                android:button="@null"
                android:drawableTop="@drawable/tab_live_selector"
                android:layout_weight="1.0" />

            <ImageView
                android:id="@+id/iv_room_main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-13.0dip"
                android:src="@drawable/tab_room_selector" />

            <RadioButton
                android:gravity="center"
                android:layout_gravity="center"
                android:id="@+id/rb_me_main"
                android:layout_width="0.0dip"
                android:layout_height="46.0dip"
                android:checked="false"
                android:button="@null"
                android:drawableTop="@drawable/tab_me_selector"
                android:layout_weight="1.0" />
        </RadioGroup>
    </LinearLayout>
</LinearLayout>